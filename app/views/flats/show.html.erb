<div class="container flex-center">

  <% if @flat.photo.attached? %>
    <%= cl_image_tag(@flat.photo.key, class: "banner") %>
  <% else %>
    <%= image_tag("default_image.jpg", class: "banner") %>
  <% end %>

  <div class="mt-3">
    <h5><%= @flat.name %></h5>
    <p><%= @flat.description %></p>
    <p><%= @flat.price_per_night %> â‚¬</p>
  </div>


  <% if @flat.user != current_user %>
    <%= simple_form_for([@flat, @booking]) do |f| %>
      <%= f.input :start_date, label: "Start Date" %>
      <%= f.input :end_date, label: "End Date" %>
      <%= f.submit "Book Now" %>
    <% end %>
  <% end %>

</div>
